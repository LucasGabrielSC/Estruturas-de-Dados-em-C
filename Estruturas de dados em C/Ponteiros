#include <stdio.h> 

int main() { 

    int v[] = {10,20,30}; 

int *p = v;  

  

    printf("O Primeiro elemento: %d\n", *p ); 

    printf("O segundo elemento: %d\n", *(p + 1)); // não altera valor de p 

    printf("P vale, porém o proximo elemento pulara dois arrays: %d\n", *(p++)); //++ antes altera o valor de p na proxima linha 

    printf("O terceiro elemento: %d\n", *(++p)); //++ antes altera o valor de do print 

    printf("P volta a valer: %d\n \n \n", *(p - 2)); //++ antes altera o valor de do print 

     

    *p=v[0]; 

    // codigo 2 

  

printf("Primeiro elemento: %d\n", *p);     

printf("Segundo elemento: %d\n", *(++p)); //o valor de p muda     

printf("Terceiro elemento: %d\n", *(++p)); //o valor de p muda     

printf("p = %d", *p);     

  

    return 0;  

} 
